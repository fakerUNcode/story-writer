			</if>
			<if test="bean.dataType != null">
				 data_type,
			</if>
			<if test="bean.dataValue != null">
				 data_value,
			</if>
		 </trim>
		 <trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="bean.statisticsDate!=null">
				 #{bean.statisticsDate},
			</if>
			<if test="bean.userId!=null">
				 #{bean.userId},
			</if>
			<if test="bean.dataType!=null">
				 #{bean.dataType},
			</if>
			<if test="bean.dataValue!=null">
